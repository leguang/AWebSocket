<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_url"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <EditText
                android:id="@+id/editText0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/send0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发送0" />

            <Button
                android:id="@+id/subscribe0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="连接0" />


            <Button
                android:id="@+id/disconnect0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="关闭0" />


            <TextView
                android:id="@+id/message0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="message0" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/send1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发送1" />

            <Button
                android:id="@+id/subscribe1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="连接1" />

            <Button
                android:id="@+id/disconnect1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="关闭1" />

            <TextView
                android:id="@+id/message1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="message1" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>